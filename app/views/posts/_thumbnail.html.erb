<div class="post-thumbnail panel panel-info" data-post-id="<%= post.id %>">
  <%= link_to post.link do %>
    <div class="panel-body row">
      <div class="col-md-4 post-thumbnail-image pull-left">
      </div>
      <div class="col-md-8 post-thumbnail-title">
      </div>
      <div class="col-md-8 post-thumbnail-description">
      </div>
      <div class="clearfix"></div>
    </div>
  <% end %>
</div>