<% @posts.each do |post| %>
  <div class="row">
    <div id="<%= post.id %>" class="col-md-6 col-md-offset-3">
      <div class="post panel panel-info" data-collapsed="0">
        <div class="panel-body">
          <p class="post-content"><%= simple_format(post.content) %></p>
          <%= link_to post.host, post.link, class: 'host', target: "blank" %>
          <small>
            <span class="pull-right">
              <%= time_ago_in_words post.created_at %> 전
              <span>via <%= post.user.name %></span>
            </span>
          </small>
          <%= render 'thumbnail', { post: post } %>
          <div class="clearfix"></div>
          <div class="menu-div">
            <% if current_user == post.user %>
              <div class="btn-group">
                <% if post.closed %>
                  <%= link_to "마감풀기" , open_post_path(post), class: "btn btn-default btn-post-close" %>
                <% else %>
                  <%= link_to "마감하기" , close_post_path(post), class: "btn btn-red btn-post-close" %>
                <% end %>
                <%= link_to "수정하기" , '#', class: "btn btn-default btn-post-edit", data: {toggle: 'modal', target: '#edit-modal', post: post.id } %>
                <%= link_to "삭제하기" , post_path(post), class: "btn btn-default", method: :delete, data: {confirm: "정말로 삭제하시겠습니까?"} %>
              </div>
            <% else %>
              <% if post.closed %>
                <%= link_to "마감됨" , participants_path(post_id: post.id), method: :post, class: "btn btn-red btn-block disabled" %>
              <% else %>
                <% if participant = post.participants.find_by(user: current_user) %>
                  <%= link_to "참여취소" , participant_path(participant), method: :delete, class: "btn btn-default btn-block" %>
                <% elsif post.max_participant_number == post.participants.length  %>
                  <%= link_to "인원초과" , participants_path(post_id: post.id), method: :post, class: "btn btn-red btn-block disabled" %>
                <% else %>
                  <%= link_to "참여하기" , participants_path(post_id: post.id), method: :post, class: "btn btn-success btn-block" %>
                <% end %>
              <% end %>
            <% end %>
            <% if post.participants.present? %>
              <div class="participants-panel">
                <div class="panel minimal minimal-gray">
                  <div class="panel-body participants-body">
                    <ul class="user-info pull-left pull-none-xsm">
                      <li class="profile-info">
                        <span class="participants-label">
                          참가자
                          <strong>
                            (<%= post.participants.length %> / <%= post.max_participant_number %>)
                          </strong>
                        </span>

                        <% post.participants.each do |participant| %>
                          <%= link_to participant.user.url, target: "blank" do %>
                            <%= image_tag(asset_url(participant.user.image), class: "img-circle", width: "33") %>
                          <% end %>
                        <% end %>
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <%= render '/comments/list', { post: post } %>
      </div>
      <%= render '/comments/create', { post: post } %>
    </div>
  </div>
<% end %>