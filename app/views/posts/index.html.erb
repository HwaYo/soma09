<div class="row">
  <div class="row post-form">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for @new_post do |f| %>
          <% if @new_post.errors.messages[:link].blank? %>
            <div class="form-group">
          <% else %>
            <div class="form-group validate-has-error">
          <% end %>
          <%= f.label :link, class: "hidden control-label" %>
          <%= f.text_field :link, class: "form-control",placeholder: "제품 이미지 Url을 입력해주세요" %>

          <% @new_post.errors.messages[:link].each do |message| %>
            <span for="link" class="validate-has-error"><%= message %></span>
          <% end %> 
        </div>

          <% if @new_post.errors.messages[:content].blank? %>
            <div class="form-group">
          <% else %>
            <div class="form-group validate-has-error">
          <% end %>
            <%= f.label :content, class: "hidden control-label" %>
            <%= f.text_area :content, class: "form-control",  placeholder: "제품 설명을 적어주세요", rows: 10 %>

            <% @new_post.errors.messages[:content].each do |message| %>
              <span for="content" class="validate-has-error"><%= message %></span>
            <% end %>
          </div>

          <%= f.submit "등록", class: "btn btn-info btn-block" %>
        <% end %>
    </div>
 </div>


  <div class="row post-list">

    <% @posts.each do |post| %>
      <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-info" data-collapsed="0">
          <!-- panel body -->
          <div class="panel-body">
            <p class="post-content"><%= post.content %></p>
            <%= link_to "상세보기", post.link, target: "blank" %>
            <small>
              <span class="pull-right">
                <%= time_ago_in_words post.created_at %> 
              </span>
            </small>
          </div>
          <ul class="comments-list border-top">
          <% post.comments.each do |comment| %>
            <li>
                <span class="coment-picture">
                  <img class="img-circle" width="33px" src="https://fbcdn-profile-a.akamaihd.net/hprofile-ak-xap1/v/t1.0-1/p320x320/67393_854806001238152_7894471709168287462_n.jpg?oh=67480dded674b9c1fa612e23f46d5610&oe=556DD19C&__gda__=1428555070_7b248cbc7f67d98773df39a163e7ea00"/>
                </span>
                <span class="col-md-11">
                  <div class="comment-head">
                  작성자 
                  </div>
                  <%= comment.content %>
                </span>
            </li>
          <% end %>
          </ul>
        </div>
          
        <div class="comment-form">
          <%= form_for [post, post.comments.new] do |f| %>
            <%= f.hidden_field :post_id, value: post.id %>

            <div class="input-group">
              <%= f.text_field :content, class: "form-control" %>
              
              <span class="input-group-btn">
                <%= f.submit "댓글", class: "btn btn-info" %>
                
              </span>
            </div>
          <% end %>

        </div>
      </div>
    <% end %>
  </div>
</div>